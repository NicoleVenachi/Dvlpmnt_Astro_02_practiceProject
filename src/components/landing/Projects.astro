---
import {projects} from "../../config/projects.json";


---

<section class="p-4">
  <h2 class="font-bold text-2xl my-5"> Projects </h2>

  {
    projects.map(project =>(
      <div class="flex text-center sm:text-left flex flex-col sm:flex-row gap-y-4">
        <div class="flex-1">
          <h2 class="font-bold text-2xl my-4"> {project.title} </h2>
          <p class="my-2">{project.description}</p>

          <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
            More info
          </button>
        </div>
        <figure class="flex-1">
          <img class="w-72 m-auto" src={project.image} alt="">
        </figure>
      </div>
    )) 
  }
  
</section>

